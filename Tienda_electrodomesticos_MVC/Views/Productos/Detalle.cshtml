@model Tienda_electrodomesticos_MVC.Models.Producto
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "Detalle de Producto";
    var api = Configuration["ApiBaseUrl"];
}

<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <!-- Mensaje de éxito -->
            @if (TempData["SuccessMsg"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMsg"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Mensaje de error -->
            @if (TempData["ErrorMsg"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMsg"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Imagen del producto -->
            <div class="col-lg-6 d-flex justify-content-center">
                <div class="bg-white rounded-4 shadow-sm p-3 p-md-4" style="max-width: 90%;">
                    <img src="@($"{api}/images/productos/{Model.Imagen}")"
                         alt="@Model.Titulo"
                         class="img-fluid rounded-3" />
                </div>
            </div>

            <!-- Detalles del producto -->
            <div class="col-lg-6">
                <div class="bg-white rounded-4 shadow-sm p-4 p-md-5 h-100">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h1 class="fw-bold text-dark mb-0">@Model.Titulo</h1>
                        @if (Model.Stock > 0)
                        {
                            <span class="badge bg-success fs-6 py-2 px-3">Disponible</span>
                        }
                        else
                        {
                            <span class="badge bg-danger fs-6 py-2 px-3">Agotado</span>
                        }
                    </div>

                    <p class="text-body-secondary mb-4">@Model.Descripcion</p>

                    <!-- Detalles técnicos -->
                    <div class="mb-4">
                        <h6 class="fw-semibold text-muted mb-2">Detalles del producto</h6>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-1">
                                <span class="fw-medium">Categoría:</span>
                                <span class="text-body-secondary ms-1">@Model.CategoriaNombre</span>
                            </li>
                            <li class="mb-1">
                                <span class="fw-medium">Garantía:</span>
                                <span class="text-body-secondary ms-1">1 año por fallas de fábrica</span>
                            </li>
                            <li>
                                <span class="fw-medium">Política:</span>
                                <span class="text-body-secondary ms-1">Devolución en 7 días</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Precios -->
                    <div class="bg-light rounded-3 p-3 mb-4">
                        <div class="d-flex align-items-baseline mb-1">
                            <span class="fs-4 fw-bold text-success me-2">S/@Model.PrecioConDescuento</span>
                            <span class="text-body-secondary text-decoration-line-through">S/@Model.Precio</span>
                        </div>
                        <small class="text-muted">Descuento aplicado: @Model.Descuento%</small>
                    </div>

                    <!-- Botones -->
                    <div class="d-flex flex-wrap gap-3">
                        @if (Model.Stock > 0)
                        {
                            <a asp-controller="Usuario" asp-action="AddCart" asp-route-pid="@Model.Id"
                               class="btn btn-danger px-4 py-2 fw-medium">
                                <i class="fas fa-cart-plus me-2"></i> Agregar al carrito
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-outline-secondary px-4 py-2 fw-medium" disabled>
                                <i class="fas fa-ban me-2"></i>Fuera de stock
                            </button>
                        }

                        <a asp-controller="Productos" asp-action="Index" class="btn btn-outline-dark px-4 py-2 fw-medium">
                            <i class="fas fa-arrow-left me-2"></i>Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
