@using Tienda_electrodomesticos_MVC.Models
@inject IConfiguration Configuration
@inject Tienda_electrodomesticos_MVC.Services.CategoriaApiService categoriaService

@{
    ViewData["Title"] = "ElectroPeru";
    var api = Configuration["ApiBaseUrl"];
    var usuario = ViewBag.Usuario as Usuario; // Usuario logueado
    var categorias = ViewBag.Categorias as List<Categoria> ?? new List<Categoria>();
    var countCart = ViewBag.CountCart ?? 0;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    @RenderSection("Styles", required: false)


    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-light">
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-cart-shopping me-2"></i> ElectroPeru
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Left -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-house me-1"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Productos" asp-action="Index">
                            <i class="fa-solid fa-box me-1"></i> Productos
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fa-solid fa-list me-1"></i> Categorías
                        </a>
                        <ul class="dropdown-menu">
                            @foreach (var c in categorias)
                            {
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Productos"
                                       asp-action="Index"
                                       asp-route-categoria="@c.Nombre">
                                        @c.Nombre
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>

                </ul>

                <!-- Right -->
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @if (usuario == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Cuenta" asp-action="Login">
                                <i class="fa-solid fa-right-to-bracket me-2"></i> Ingresar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Cuenta" asp-action="Registro">
                                <i class="fa-solid fa-user-plus me-2"></i> Registrarse
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning d-flex align-items-center" asp-controller="Carrito" asp-action="Index">
                                <i class="fa-solid fa-cart-shopping me-1"></i>
                                Carrito [@countCart]
                            </a>
                        </li>

                        <li class="nav-item">
                            <span class="nav-link d-flex align-items-center">
                                <i class="fa-solid fa-user me-1"></i> @usuario.Nombre
                            </span>
                        </li>

                        @if (usuario.Rol?.ToUpper() == "ROLE_ADMIN")
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-controller="Admin" asp-action="Index">
                                    <i class="fa-solid fa-shield me-1"></i> Admin
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-danger d-flex align-items-center" asp-controller="Cuenta" asp-action="Logout">
                                <i class="fa-solid fa-right-from-bracket me-1"></i> Salir
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- CONTENIDO -->
    <main class="pt-5 mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-primary text-white text-center py-3 mt-5">
        &copy; 2025 <strong>ElectroPeru</strong> — Todos los derechos reservados
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
