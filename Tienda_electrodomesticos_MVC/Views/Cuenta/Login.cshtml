@model Tienda_electrodomesticos_MVC.Models.ViewModels.LoginViewModel
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Iniciar Sesión";
    var api = Configuration["ApiBaseUrl"];
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center align-items-center shadow-lg rounded-4 overflow-hidden">
            <!-- Imagen lateral -->
            <div class="col-md-6 d-none d-md-block p-0">
                <img src="@($"{api}/images/eperu.png")"
                     alt="Electro Perú"
                     class="img-fluid w-100 h-100"
                     style="object-fit: cover" />
            </div>


            <!-- Formulario -->
            <div class="col-12 col-md-6 bg-white p-5">
                <div class="card border-0">
                    <div class="card-header bg-white border-0">
                        <h3 class="text-center text-primary fw-bold mb-0">Inicia sesión</h3>
                    </div>

                    <div class="card-body">
                        <div class="container mt-4">
                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger text-center">
                                    <i class="fa-solid fa-triangle-exclamation me-1"></i>
                                    @TempData["Error"]
                                </div>
                            }

                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success text-center">
                                    ✅ @TempData["Success"]
                                </div>
                            }

                            <form asp-action="Login" method="post">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Correo electrónico</label>
                                    <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="ejemplo@correo.com" required />
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Contraseña</label>
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="********" required />
                                </div>

                                <button type="submit" class="btn btn-primary w-100">Iniciar sesión</button>
                            </form>
                        </div>
                    </div>

                    <div class="card-footer bg-white border-0 text-center">
                        <a asp-controller="Cuenta"
                           asp-action="ForgotPassword"
                           class="text-decoration-none small d-block mb-2 text-secondary">
                            ¿Olvidaste la contraseña?
                        </a>

                        <span class="text-secondary">¿No tienes cuenta?</span>

                        <a asp-controller="Cuenta"
                           asp-action="Registro"
                           class="fw-semibold text-primary text-decoration-none">
                            Regístrate
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
