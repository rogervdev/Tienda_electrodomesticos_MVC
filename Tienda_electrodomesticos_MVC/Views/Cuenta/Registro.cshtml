@model Tienda_electrodomesticos_MVC.Models.ViewModels.RegistroViewModel
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "Registro de Usuario";
    var api = Configuration["ApiBaseUrl"];
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center align-items-center shadow-lg rounded-4 overflow-hidden">

            <!-- Imagen lateral -->
            <div class="col-md-6 d-none d-md-block p-0">
                <img src="@($"{api}/images/eperu.png")"
                     alt="Electro Perú"
                     class="img-fluid w-100 h-100"
                     style="object-fit: cover" />
            </div>

            <!-- Formulario -->
            <div class="col-12 col-md-6 bg-white p-5">
                <div class="card border-0">
                    <div class="card-header bg-white border-0 text-center">
                        <h3 class="text-primary fw-bold mb-3">Regístrate</h3>

                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                    </div>

                    <div class="card-body">
                        <form asp-action="Registro" method="post" enctype="multipart/form-data">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Nombres</label>
                                    <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Juan" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Apellidos</label>
                                    <input asp-for="Apellido" class="form-control form-control-lg" placeholder="Pérez" required />
                                </div>
                            </div>

                            <div class="row g-3 mt-1">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Correo electrónico</label>
                                    <input asp-for="Email" class="form-control form-control-lg" placeholder="ejemplo@correo.com" required />
                                </div>
                            </div>

                            <div class="row g-3 mt-1">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Contraseña</label>
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="********" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Confirmar Contraseña</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="********" required />
                                </div>
                            </div>

                       

                            <div class="mt-4">
                                <button type="submit" class="btn btn-primary btn-lg w-100">Crear cuenta</button>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer bg-white border-0 text-center">
                        <span class="text-secondary">¿Ya tienes cuenta?</span>
                        <a asp-action="Login" class="fw-semibold text-primary text-decoration-none">Inicia sesión</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
