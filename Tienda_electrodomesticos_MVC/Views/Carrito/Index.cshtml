@model List<Tienda_electrodomesticos_MVC.Models.Carrito>

<h2 class="m-5 text-center">Mi carrito</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center">Tu carrito está vacío.</div>
}
else
{
    <div class="table-responsive mx-auto" style="max-width:900px;">
        <table class="table table-striped align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio unitario</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.Producto?.Titulo ?? "Sin nombre")</td>
                        <td>
                            <div class="d-flex justify-content-center align-items-center gap-1">
                                <!-- Botón disminuir -->
                                <form asp-controller="Carrito" asp-action="ActualizarCantidad" method="post" class="d-inline">
                                    <input type="hidden" name="productoId" value="@item.ProductoId" />
                                    <button type="submit" name="accion" value="menos" class="btn btn-outline-secondary btn-sm">-</button>
                                </form>

                                <span class="mx-2">@item.Cantidad</span>

                                <!-- Botón aumentar -->
                                <form asp-controller="Carrito" asp-action="ActualizarCantidad" method="post" class="d-inline">
                                    <input type="hidden" name="productoId" value="@item.ProductoId" />
                                    <button type="submit" name="accion" value="mas" class="btn btn-outline-secondary btn-sm">+</button>
                                </form>
                            </div>
                        </td>
                        <td>S/. @(item.Cantidad > 0 ? (item.PrecioTotal / item.Cantidad).ToString("F2") : "0.00")</td>
                        <td>S/. @item.PrecioTotal.ToString("F2")</td>
                        <td>
                            <!-- Botón eliminar -->
                            <form asp-controller="Carrito" asp-action="Eliminar" method="post" class="d-inline">
                                <input type="hidden" name="productoId" value="@item.ProductoId" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-end mb-4 mx-auto" style="max-width:900px;">
        <h4>Total general: S/. @Model.Sum(x => x.PrecioTotal).ToString("F2")</h4>
    </div>

    <div class="d-flex justify-content-center gap-2 mb-5">
        <a asp-controller="Productos" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Seguir comprando
        </a>
        <a asp-controller="Pedido" asp-action="Checkout" class="btn btn-success">
            <i class="fas fa-credit-card me-1"></i> Pagar
        </a>
    </div>
}
