<a asp-controller="Carrito"
   asp-action="Index"
   asp-route-usuarioId="1"
   class="nav-link">
    🛒 Carrito (<span id="cart-count">0</span>)
</a>

<script>
    fetch('/Carrito/Contador?usuarioId=1')
      .then(r => r.json())
      .then(d => document.getElementById('cart-count').innerText = d);
</script>
